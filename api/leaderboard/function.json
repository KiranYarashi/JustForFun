{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["get"],
      "route": "leaderboard"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "allProgress",
      "databaseName": "LeetCodeTracker",
      "containerName": "Leaderboard",
      "connection": "CosmosDbConnectionString",
      "sqlQuery": "SELECT * FROM c WHERE c.type = 'stats'"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "allUserProgress",
      "databaseName": "LeetCodeTracker",
      "containerName": "UserProgress",
      "connection": "CosmosDbConnectionString",
      "sqlQuery": "SELECT * FROM c"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "leaderboardOutput",
      "databaseName": "LeetCodeTracker",
      "containerName": "Leaderboard",
      "createIfNotExists": true,
      "connection": "CosmosDbConnectionString",
      "partitionKey": "/userId"
    }
  ]
}
