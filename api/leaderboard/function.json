{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["get"],
      "route": "leaderboard"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "allProgress",
      "databaseName": "LeetCodeTracker",
      "containerName": "Leaderboard",
      "connection": "CosmosDbConnectionString",
      "sqlQuery": "SELECT * FROM c WHERE c.type = 'stats'"
    }
  ]
}
