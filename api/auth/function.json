{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["post"],
      "route": "auth/{action}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "outputDocument",
      "databaseName": "LeetCodeTracker",
      "containerName": "Users",
      "createIfNotExists": true,
      "connection": "CosmosDbConnectionString",
      "partitionKey": "/username"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "userDocument",
      "databaseName": "LeetCodeTracker",
      "containerName": "Users",
      "connection": "CosmosDbConnectionString",
      "id": "{username}",
      "partitionKey": "{username}"
    }
  ]
}
