{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": ["get", "post"],
      "route": "ping"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "usersBootstrap",
      "databaseName": "LeetCodeTracker",
      "containerName": "Users",
      "createIfNotExists": true,
      "connection": "CosmosDbConnectionString",
      "partitionKey": "/username"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "progressBootstrap",
      "databaseName": "LeetCodeTracker",
      "containerName": "UserProgress",
      "createIfNotExists": true,
      "connection": "CosmosDbConnectionString",
      "partitionKey": "/userId"
    }
  ]
}
